<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/furia_light_gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FURIA Fan Meetup"
            android:textColor="@color/furia_white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/03/2024"
            android:textColor="@color/furia_orange"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tvEventName"
            app:layout_constraintTop_toBottomOf="@+id/tvEventName" />

        <TextView
            android:id="@+id/tvEventLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="São Paulo, SP"
            android:textColor="@color/furia_light_gray"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvEventDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvEventDate"
            app:layout_constraintTop_toTopOf="@+id/tvEventDate" />

        <TextView
            android:id="@+id/tvEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Encontro com fãs"
            android:textColor="@color/furia_white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tvEventDate"
            app:layout_constraintTop_toBottomOf="@+id/tvEventDate" />

        <TextView
            android:id="@+id/tvEventDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Encontro com os jogadores da FURIA CS2 e autógrafos"
            android:textColor="@color/furia_light_gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvEventType"
            app:layout_constraintTop_toBottomOf="@+id/tvEventType" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAttended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participei"
            android:textColor="@color/furia_white"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/furia_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>